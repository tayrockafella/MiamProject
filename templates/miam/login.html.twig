{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block body %}
<h1 class="text-center" style="font-family: 'Grand Hotel', cursive;">{{title}}</h1>
    <form id="addUser"  method="POST" action="#">
        <div class="form-group text-center">
            <label for="formGroupExampleInput2">Nom d'utilisateur</label>
            <input type="text" class="form-control"  name="username">
        </div>
        <div class="form-group text-center" id="show_hide_password">
            <label for="formGroupExampleInput2">Mot de passe</label>
            <input type="password" class="form-control"  name="password">
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-warning">Se connecter</button>
        </div>
    </form>

{% endblock %}